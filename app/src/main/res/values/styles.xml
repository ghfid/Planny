<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="simple_button">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="simple_button_green" parent="simple_button">
        <item name="android:background">@drawable/selector_button_green</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="simple_button_grey" parent="simple_button">
        <item name="android:background">@drawable/selector_button_grey</item>
    </style>

    <style name="simple_button_green_round" parent="simple_button">
        <item name="android:background">@drawable/selector_button_green_round</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="edit_text_trans">
        <item name="android:textSize">14dp</item>
        <item name="android:padding">19dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_trans_40</item>
        <item name="android:background">@color/black_trans_40</item>
    </style>

    <style name="edit_text_grey_text" parent="edit_text_trans">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey_text_light</item>
    </style>

</resources>
